<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/border_13"
    >

    <TextView
        android:id="@+id/textViewSicil"
        android:layout_width="80dp"
        android:layout_height="40dp"></TextView>
    <TextView
        android:id="@+id/textViewYil"
        android:layout_width="60dp"
        android:layout_height="40dp"></TextView>
    <TextView
        android:id="@+id/textViewAy"
        android:layout_width="60dp"
        android:layout_height="40dp"></TextView>

    <TextView
        android:id="@+id/textViewGun"
        android:layout_width="70dp"
        android:layout_height="40dp"></TextView>

    <TextView
        android:id="@+id/textViewTutar"
        android:layout_width="70dp"
        android:layout_height="40dp"></TextView>
    <Button
        android:id="@+id/buttonSil"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="SIL"
        android:backgroundTint="#8FD43636"
        android:onClick="silClick"

        ></Button>








</LinearLayout>